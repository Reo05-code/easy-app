<% content_for :title, "Posts" %>

<div class="max-w-4xl mx-auto px-4 py-8">
  <% if notice.present? %>
    <p class="py-2 px-4 bg-green-100 border border-green-300 mb-6 text-green-700 font-medium rounded-md text-center shadow-sm" id="notice">
      <%= notice %>
    </p>
  <% end %>

  <div class="flex justify-between items-center mb-8">
    <h1 class="font-bold text-4xl text-gray-800 tracking-tight">学習履歴</h1>
    <%= link_to "＋ 学習ログ", new_post_path, class: "rounded-lg px-4 py-2.5 bg-blue-600 hover:bg-blue-500 text-white font-semibold shadow-md transition duration-200" %>
  </div>

  <div id="posts" class="space-y-6">
    <% if @posts.any? %>
      <% @posts.each do |post| %>
        <div class="bg-white rounded-xl shadow-sm border border-gray-200 hover:shadow-md transition-all duration-200 p-5 flex flex-col sm:flex-row justify-between items-start sm:items-center gap-4">
          <%= render post %>

          <div class="flex flex-wrap gap-2 w-full sm:w-auto">
            <%= link_to "Show", post, class: "px-4 py-2 rounded-md bg-gray-100 hover:bg-gray-200 text-gray-700 font-medium transition" %>
            <%= link_to "Edit", edit_post_path(post), class: "px-4 py-2 rounded-md bg-yellow-100 hover:bg-yellow-200 text-yellow-700 font-medium transition" %>
            <%= button_to "Destroy", post, method: :delete, class: "px-4 py-2 rounded-md bg-red-600 hover:bg-red-500 text-white font-medium transition cursor-pointer", data: { turbo_confirm: "Are you sure?" } %>
          </div>
        </div>
      <% end %>
    <% else %>
      <p class="text-center my-12 text-gray-500 text-lg">No posts found.</p>
    <% end %>
  </div>
</div>
