<div>
  <h1 class="font-bold text-4xl">Topics#new</h1>
  <p>Find me in app/views/topics/new.html.erb</p>
</div>
<!-- 新規登録フォーム -->
<%= form_with model: Topic.new, url: topics_path do |f| %>
  <%= f.label :title, "タイトル" %>
  <%= f.text_field :title %>
  <%= f.label :name, "タグ(半角スペースで複数個登録できます)" %>
  <%= f.text_field :name %>
  <%= f.submit "登録" %>
<% end %>
