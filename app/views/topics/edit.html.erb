<div>
  <h1 class="font-bold text-4xl">Topics#edit</h1>
  <p>Find me in app/views/topics/edit.html.erb</p>
</div>
<%= form_with model: topic, url: topic_path(topic) do |f| %>
  <%= f.label :title, "タイトル" %>
  <%= f.text_field :title %>
  <%= f.label :name, "タグ(半角スペースで複数個登録できます)" %>
  <%= f.text_field :name %>
  <%= f.submit "登録" %>
<% end %>
